@model User
<div class="form-row">
    <div class="form-group col-md-6">
        <label asp-for="Email">Почта</label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input type="email" class="form-control" asp-for="Email" readonly>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Name">Имя</label>
        <input asp-for="Name" class="form-control" readonly>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-5">
        <label asp-for="PhoneNumber">Номер телефона</label>
        <input class="form-control" asp-for="PhoneNumber" readonly>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Gender">Пол</label>
        @if (Model.Gender.Value)
        {
            <input class="form-control" asp-for="Gender" value="Мужской" readonly>
        }
        else
        {
            <input class="form-control" asp-for="Gender" value="Женский" readonly>
        }
    </div>
    <div class="form-group col-md-3">
        <label asp-for="BirthDate">Дата Рождения</label>
        <input type="date" class="form-control" asp-for="BirthDate" readonly>
    </div>
</div>