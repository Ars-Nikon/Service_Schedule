@{
    ViewData["Title"] = "Record";
    ViewData["container"] = "container-fluid my-5";
}
@model SpecsFio;
<div class="mt-5 mb-5">
    <h1 class="text-center">Запись на услугу</h1>
</div>
@if (Model != null)
{
    <input type="hidden" id="Spec" value="@Model.Id" />
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <h2>Специалист: @Model.FIO</h2>
                <div class="container p-5 bg-white rounded box-shadow">
                    <select class="custom-select" Id="Months" class="form-select" onchange="UpdateCalendar()"
                        asp-items="@ViewBag.Months"></select>
                    <div id="div_0">
                        @await Component.InvokeAsync("CalendarSegment", new {Id = Model.Id})
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div id="div_1">
                </div>
            </div>
        </div>
    </div>
}


<div class="modal fade bd-example-modal-lg" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <input type="hidden" value='' id="HidenGuidtime" />
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Подтверждение записи</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row mb-5">
                    <div class="col-sm">
                        ФИО:
                    </div>
                    <div class="col-sm">
                        <h4>@Model.FIO</h4>
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-sm">
                        Спициальность:
                    </div>
                    <div class="col-sm">
                        <h4>@Model.Type</h4>
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-sm">
                        Цена:
                    </div>
                    <div class="col-sm">
                        <h4>@Model.Price ₽</h4>
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-sm">
                        Дата:
                    </div>
                    <div class="col-sm">
                        <h4 id="ModalDate"></h4>
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-sm">
                        Время приема:
                    </div>
                    <div class="col-sm">
                        <h4 id="TimeVisit"></h4>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">Отменить</button>
                <button type="button" class="btn btn-info ml-auto" onclick="Recording()">Записаться</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Rocord.js" />