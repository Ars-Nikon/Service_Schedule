@model Service_Schedule.Models.RegistrationSpecView
@{
    ViewData["Title"] = "NewSpecialist";
}
<div class="mt-5 mb-5">
    <h1 class="text-center">Новый специалист</h1>
</div>
<div class="my-3 p-5 bg-white rounded box-shadow">
    <form method="post" asp-controller="Admin" asp-action="NewSpecialist" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Имя</label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control" placeholder="Имя">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Surname">Фамилия</label>
                <span asp-validation-for="Surname" class="text-danger"></span>
                <input asp-for="Surname" class="form-control" placeholder="Фамилия">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Patronymic">Отчество</label>
            <span asp-validation-for="Patronymic" class="text-danger"></span>
            <input asp-for="Patronymic" class="form-control" placeholder="Отчество">
        </div>
        <div class="form-row">
            <div class="form-group col-md-5">
                <label asp-for="Phone"></label>
                <span asp-validation-for="Phone" class="text-danger"></span>
                <input class="form-control" asp-for="Phone" placeholder="Номер Телефон">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Gender"></label>
                <span asp-validation-for="Gender" class="text-danger"></span>
                <select asp-for="Gender" class="form-control">
                    <option value="true" selected>Мужской</option>
                    <option value="false">Женский</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="BirthDate"></label>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
                <input type="date" class="form-control" asp-for="BirthDate">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input type="email" class="form-control" placeholder="Email" asp-for="Email">
        </div>
        <div class="form-group">
            <label asp-for="TypeSpec">Тип специальности</label>
            <span asp-validation-for="TypeSpec" class="text-danger"></span>
            <input asp-for="TypeSpec" class="form-control" placeholder="Тип специальности">
        </div>
        <div class="form-group">
            <label asp-for="Discription">Описание</label>
            <span asp-validation-for="Discription" class="text-danger"></span>
            <textarea class="form-control" asp-for="Discription" placeholder="Описание"> </textarea>
        </div>
        <div class="form-group">
            <label asp-for="Avatar">Фото</label>
            <span asp-validation-for="Avatar" class="text-danger"></span>
            <input class="form-control-file" type="file" asp-for="Avatar" placeholder="140Х140" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" class="form-control" id="password-input1" asp-for="Password">
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirm"></label>
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            <input type="password" class="form-control" id="password-input2" asp-for="PasswordConfirm">
        </div>

        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" onchange="return show_hide_password(this);" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    Показать пароль
                </label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Сохранить</button>
    </form>
</div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
<script>
    function show_hide_password(target){
        var input = document.getElementById('password-input1');
        if (input.getAttribute('type') == 'password') {
            target.classList.add('view');
            input.setAttribute('type', 'text');
        } else {
            target.classList.remove('view');
            input.setAttribute('type', 'password');
        }
        input = document.getElementById('password-input2');
         if (input.getAttribute('type') == 'password') {
            target.classList.add('view');
            input.setAttribute('type', 'text');
        } else {
            target.classList.remove('view');
            input.setAttribute('type', 'password');
        }
        return false;
    }
</script>